<svg xmlns="http://www.w3.org/2000/svg" width="800" height="500" viewBox="0 0 800 500">
  <rect width="800" height="500" fill="#f0f0f0"/>
  <text x="400" y="80" font-family="Arial" font-size="32" text-anchor="middle" fill="#333">Annual Sports Day 2024</text>
  <!-- Sports field -->
  <rect x="100" y="120" width="600" height="300" fill="#7cba6b" stroke="#5a8c4b" stroke-width="2"/>
  <!-- Running track -->
  <ellipse cx="400" cy="270" rx="250" ry="120" fill="none" stroke="#d35f5f" stroke-width="8"/>
  <!-- Students running -->
  <!-- Runner 1 -->
  <circle cx="250" cy="270" r="20" fill="#f0d0b0" stroke="#b39980" stroke-width="1"/>
  <rect x="240" y="290" width="20" height="30" fill="#5a78a6" stroke="#3a5a78" stroke-width="1"/>
  <line x1="240" y1="300" x2="220" y2="320" stroke="#5a78a6" stroke-width="5" stroke-linecap="round"/>
  <line x1="260" y1="300" x2="280" y2="320" stroke="#5a78a6" stroke-width="5" stroke-linecap="round"/>
  <!-- Runner 2 -->
  <circle cx="350" cy="270" r="20" fill="#f0d0b0" stroke="#b39980" stroke-width="1"/>
  <rect x="340" y="290" width="20" height="30" fill="#a65a5a" stroke="#783a3a" stroke-width="1"/>
  <line x1="340" y1="300" x2="320" y2="320" stroke="#a65a5a" stroke-width="5" stroke-linecap="round"/>
  <line x1="360" y1="300" x2="380" y2="320" stroke="#a65a5a" stroke-width="5" stroke-linecap="round"/>
  <!-- Runner 3 -->
  <circle cx="450" cy="270" r="20" fill="#f0d0b0" stroke="#b39980" stroke-width="1"/>
  <rect x="440" y="290" width="20" height="30" fill="#5aa65a" stroke="#3a783a" stroke-width="1"/>
  <line x1="440" y1="300" x2="420" y2="320" stroke="#5aa65a" stroke-width="5" stroke-linecap="round"/>
  <line x1="460" y1="300" x2="480" y2="320" stroke="#5aa65a" stroke-width="5" stroke-linecap="round"/>
  <!-- Runner 4 -->
  <circle cx="550" cy="270" r="20" fill="#f0d0b0" stroke="#b39980" stroke-width="1"/>
  <rect x="540" y="290" width="20" height="30" fill="#a6a65a" stroke="#78783a" stroke-width="1"/>
  <line x1="540" y1="300" x2="520" y2="320" stroke="#a6a65a" stroke-width="5" stroke-linecap="round"/>
  <line x1="560" y1="300" x2="580" y2="320" stroke="#a6a65a" stroke-width="5" stroke-linecap="round"/>
  <!-- Finish line -->
  <rect x="600" y="200" width="10" height="140" fill="#fff" stroke="#000" stroke-width="1" stroke-dasharray="5,5"/>
  <!-- Text at bottom -->
  <text x="400" y="450" font-family="Arial" font-size="24" text-anchor="middle" fill="#333">Registrations Open</text>
</svg>